<html lang="en">
  <%- include("./partials/head.ejs") %>

  <body>
    <div class="main_body">
      <%- include("./partials/nav.ejs") %>

      <div class="create-blog content">
        <form action="/profile_upd/<%= dets._id %>" method="POST">
          <label for="name">Name:</label>
          <input
            type="text"
            id="name"
            name="name"
            value="<%= dets.name %>"
            required
          />
          <label for="mail">Email:</label>
          <input
            type="email"
            id="mail"
            name="email"
            value="<%= dets.email %>"
            readonly
            required
          />
          <label for="password">Password:</label>
          <input
            type="password"
            id="password"
            name="password"
            value="<%= dets.password %>"
            required
          />
          <label for="phone">Phone No:</label>
          <input
            type="text"
            id="phone"
            name="phone"
            value="<%= dets.phone %>"
            required
          />
          <button>Update</button>
        </form>
      </div>

      <%- include("./partials/footer.ejs") %>
    </div>
  </body>
</html>
