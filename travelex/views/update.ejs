<html lang="en">
  <%- include("./partials/head.ejs") %>

  <body>
    <div class="main_body">
      <%- include("./partials/nav.ejs") %>

      <div class="create-blog content">
        <form
          action="/blogs/update/<%=blog._id %>"
          method="POST"
          enctype="multipart/form-data"
        >
          <label for="title">Blog title:</label>
          <input
            type="text"
            id="title"
            name="title"
            value="<%= blog.title %>"
            required
          />
          <label for="snippet">Blog description:</label>
          <input
            type="text"
            id="description"
            name="description"
            value="<%= blog.description %>"
            required
          />

          <label for="image">Uploaded Image: <i><%= blog.image %></i></label>
          <input
            type="file"
            id="image"
            name="image"
            value="../Images/<%= blog.image %>"
          />

          <label for="snippet">Location:</label>
          <input
            type="text"
            id="location"
            name="location"
            value="<%= blog.location %>"
            required
          />
          <label for="snippet">What's Popular:</label>
          <input
            type="text"
            id="popular"
            name="popular"
            value="<%= blog.popular %>"
            required
          />
          <label for="body">Blog body:</label>
          <textarea id="body" name="body" required><%= blog.body %></textarea>
          <button>Update</button>
        </form>
      </div>

      <%- include("./partials/footer.ejs") %>
    </div>
  </body>
</html>
